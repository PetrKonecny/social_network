<div class="panel status">
  <% resource.profile || resource.build_profile %>
  <div class="panel-body">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => 'form'}) do |f| %>
      <h3>Sign up</h3>
      <%= f.error_notification %>
      <%= f.input :email, :label => 'Email', required: true, autofocus: true %>
      <%= f.input :password, :label => 'Password', required: true %>
      <%= f.input :password_confirmation, :label => 'Confirm Password', required: true %>
      <%= f.simple_fields_for :profile do |profile_form| %>
            <%= profile_form.input :name, required: true%>
            <%= profile_form.input :surname, required: true%>
            <%= profile_form.input :age, required: true %>
      <% end %>
      <%= f.submit 'Sign up', :class => 'btn brn-default' %>
  <% end %>
  </div>
</div>
