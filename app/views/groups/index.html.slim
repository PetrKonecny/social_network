h1 My  groups

.vertical-center-row
  /! Not implemented on tutorial
  .col-md-8
    div style=("overflow-x: auto; overflow-y: auto;")
      .panel.panel-default
        /! Table
        table.table
          thead
            tr
              th Name
              th Action
              th
              th
              th
          tbody
            - @groups.each do |group|
              tr
                td = group.name
                td = link_to 'Show wall', profile_group_path(current_user.profile.id, group.id), class: 'btn btn-success'
                td = link_to 'Show members', show_members_profile_group_path(current_user.profile.id, group.id), class: 'btn btn-success'
                - if Profile.in_group(group).as(:admin).first == current_user.profile
                  td = link_to 'Edit', edit_profile_group_path(current_user.profile.id, group.id), class: 'btn btn-info'
                  td = link_to 'Destroy', profile_group_path(current_user.profile.id, group.id), data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn btn-danger'
                - else
                  td
                  td

.row
